<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <ImportWindowsDesktopTargets>true</ImportWindowsDesktopTargets>
    <Platforms>x64</Platforms>
    <TargetFramework>net48</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="..\Dependencies\BonoboInterfaces.dll" Private="false" />
    <Reference Include="..\Dependencies\BonoboPluginSystem.dll" Private="false" />
    <Reference Include="..\Dependencies\Corinth.Core.dll" Private="false" />
    <Reference Include="..\Dependencies\Corinth.Core.Datastore.dll" Private="false" />
    <Reference Include="..\Dependencies\Corinth.Core.Wpf.dll" Private="false" />
    <Reference Include="..\Dependencies\Corinth.Schema.dll" Private="false" />
    <Reference Include="..\Dependencies\Corinth.SourceDepot.dll" Private="false" />
    <Reference Include="..\Dependencies\TAE.Shared.dll" Private="false" />
    <Reference Include="..\Dependencies\TAE.Shared.Tags.dll" Private="false" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\NormalPluginTest\NormalPluginTest.csproj" />
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="AfterBuild">
    <ItemGroup>
      <Dependencies Include="..\Dependencies\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(Dependencies)" DestinationFolder="$(OutDir)%(RecursiveDir)" />
  </Target>
</Project>